<body>
    <div class="container">
        <div class="logo-container">
            <img src="Evangelista.png" alt="TOT Dynamics by Alex Evangelista" class="logo">
        </div>

        <h2>Ajuste de Mensalidade</h2>
        
        <div class="form-group">
            <label>Valor da Mensalidade Atual (R$):</label>
            <input type="number" id="valorMensal" placeholder="Ex: 300.00" step="0.01">
        </div>

        <div class="form-group">
            <label>Início do Congelamento:</label>
            <input type="date" id="dataInicio">
        </div>

        <div class="form-group">
            <label>Retorno do Congelamento:</label>
            <input type="date" id="dataFim">
        </div>

        <button onclick="calcular()">Calcular Novo Valor</button>

        <div id="resultado">
            <div class="linha"><span>Dias de afastamento:</span> <span id="resDias"></span></div>
            <div class="linha"><span>Valor da diária:</span> <span id="resDiaria"></span></div>
            <div class="linha"><span>Crédito gerado:</span> <span id="resCredito" class="destaque-credito"></span></div>
            
            <div class="total-pagar">
                Valor a Pagar: <br>
                <span id="resFinal"></span>
            </div>
        </div>
    </div>

    <script>
    function calcular() {
        const mensalidade = parseFloat(document.getElementById('valorMensal').value);
        const d1 = document.getElementById('dataInicio').value;
        const d2 = document.getElementById('dataFim').value;

        if (!mensalidade || !d1 || !d2) {
            alert("Por favor, preencha todos os campos.");
            return;
        }

        const dataInicio = new Date(d1);
        const dataFim = new Date(d2);

        const diffTime = Math.abs(dataFim - dataInicio);
        const totalDias = Math.ceil(diffTime / (1000 * 60 * 60 * 24));

        const valorDiaria = mensalidade / 30;
        const creditoTotal = totalDias * valorDiaria;
        
        let valorAPagar = mensalidade - creditoTotal;
        if (valorAPagar < 0) valorAPagar = 0;

        document.getElementById('resDias').innerText = totalDias + " dias";
        document.getElementById('resDiaria').innerText = "R$ " + valorDiaria.toFixed(2).replace('.', ',');
        document.getElementById('resCredito').innerText = "- R$ " + creditoTotal.toFixed(2).replace('.', ',');
        document.getElementById('resFinal').innerText = "R$ " + valorAPagar.toFixed(2).replace('.', ',');
        
        document.getElementById('resultado').style.display = 'block';
    }
    </script>
</body>
